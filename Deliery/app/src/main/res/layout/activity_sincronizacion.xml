<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SincronizacionActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sincronizar3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:text="Sincronizar Entregas"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imabut_sincronizar"
            android:layout_width="411dp"
            android:layout_height="209dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:onClick="p_Sincroniza"
            android:scaleType="center"
            android:textAlignment="center"
            app:srcCompat="@drawable/sincronizar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="Presione el boton para iniciar la sincronizacion de los pedidos a entregar"
            android:textAlignment="center" />

        <ListView
            android:id="@+id/ListView_pedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>